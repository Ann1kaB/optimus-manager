pkgname=optimus-manager-runit
pkgver=20200425
pkgrel=1
pkgdesc="runit script for optimus-manager"
arch=('any')
url="https://github.com/Askannz/optimus-manager"
license=('MIT')
provides=('optimus-manager-runit')
depends=('elogind')
source=("git+https://github.com/Hyper-KVM/optimus-manager.git#branch=master")
sha256sums=('SKIP')

package(){

    install="runit.install"

    install -Dm755 ${srcdir}/optimus-manager/runit/optimus-manager/run ${pkgdir}/etc/runit/sv/optimus-manager/run
    install -Dm755 ${srcdir}/optimus-manager/runit/prime-switch-boot/run ${pkgdir}/etc/runit/sv/prime-switch-boot/run
}
